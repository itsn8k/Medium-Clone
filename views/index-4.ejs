<section class="ezy__blog_upload py-14 md:py-24 bg-white text-zinc-900 relative overflow-hidden z-10">
  <div class="container px-4 mx-auto">
    <div class="grid grid-cols-12 gap-6">
      <!-- Sidebar (optional) -->
      <div class="col-span-12 md:col-span-3 lg:col-span-2">
        <div class="bg-white shadow-2xl flex md:flex-col items-center justify-center">
          <a href="/dashboard" class="text-center w-full py-6 hover:bg-black hover:text-white duration-500 cursor-pointer">
            <div class="text-3xl">
              <i class="fas fa-user"></i>
            </div>
            <p class="text-xl font-bold mt-2">Profile</p>
          </a>
          <a href="/dashboard" class="text-center w-full py-6 hover:bg-black hover:text-white duration-500 cursor-pointer">
            <div class="text-3xl">
              <i class="fas fa-file-alt"></i>
            </div>
            <p class="text-xl font-bold mt-2">My Blogs</p>
          </a>
          <a href="#" class="text-center w-full py-6 bg-black text-white duration-500 cursor-pointer">
            <div class="text-3xl">
              <i class="fas fa-edit"></i>
            </div>
            <p class="text-xl font-bold mt-2">Update Blog</p>
          </a>
        </div>
      </div>

   <!-- Blog Form -->
<div class="col-span-12 md:col-span-9 lg:col-span-10">
  <div class="bg-white shadow-2xl rounded-xl p-6 py-12">
    <h3 class="text-3xl md:text-[40px] font-bold text-black leading-tight mb-6">
      Create New Blog
    </h3>

    <!-- views/edit.ejs -->
    <form action="/blog/<%= blogPost._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
      <!-- Blog Title -->
      <div class="mt-6">
        <label for="title" class="text-[17px] leading-tight font-bold mb-2 block">Title:</label>
        <input type="text" id="title" name="title" value="<%= blogPost.title %>" required class="h-12 w-full bg-gray-100 rounded-xl border-none focus:outline-none py-2 px-3" placeholder="Enter blog title">
      </div>

      <!-- Blog Snippet -->
      <div class="mt-6">
        <label for="snippet" class="text-[17px] leading-tight font-bold mb-2 block">Snippet:</label>
        <textarea id="snippet" name="snippet" required class="h-24 w-full bg-gray-100 rounded-xl border-none focus:outline-none py-2 px-3" placeholder="Enter a brief snippet of the blog"><%= blogPost.snippet %></textarea>
      </div>

      <!-- Blog Body -->
      <div class="mt-6">
        <label for="body" class="text-[17px] leading-tight font-bold mb-2 block">Body:</label>
        <textarea id="body" name="body" required class="h-48 w-full bg-gray-100 rounded-xl border-none focus:outline-none py-2 px-3" placeholder="Write your blog here..."><%= blogPost.body %></textarea>
      </div>

      <!-- Blog Image Upload -->
      <div class="mt-6">
        <label for="image" class="text-[17px] leading-tight font-bold mb-2 block">Image:</label>
        <input type="file" id="image" name="image" class="h-12 w-full bg-gray-100 rounded-xl border-none focus:outline-none py-2 px-3">
      </div>

      <!-- Submit Button -->
      <div class="mt-6">
        <button type="submit" class="bg-black text-white hover:bg-opacity-90 font-bold py-3.5 px-5 rounded-xl w-full">
          Update Post
        </button>
      </div>
    </form>
  </div>
</div>

    </div>
  </div>
</section>

