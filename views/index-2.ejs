    <!-- Blog Snippet -->
    <p class="text-lg font-semibold mb-4 opacity-80">
      <%= blogPost.snippet %>
    </p>

    <!-- Blog Body -->
    <p class="text-[16px] mb-4 opacity-80 leading-relaxed">
      <%= blogPost.body %>
    </p>
  </div>







        <div class="flex flex-col sm:flex-row items-center justify-between my-8">
