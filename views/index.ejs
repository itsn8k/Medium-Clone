<!-- Sticky category navigation - Updated for better mobile responsiveness -->
<div class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-200 shadow-sm">
  <div class="max-w-7xl mx-auto px-2 sm:px-4">
    <div class="relative">
      <!-- Gradient indicators for scroll -->
      <div class="absolute left-0 top-0 bottom-0 w-8 bg-gradient-to-r from-white/95 to-transparent pointer-events-none md:hidden"></div>
      <div class="absolute right-0 top-0 bottom-0 w-8 bg-gradient-to-l from-white/95 to-transparent pointer-events-none md:hidden"></div>

      <!-- Navigation container -->
      <div class="relative overflow-x-auto scrollbar-hide -mx-2 px-2">
        <nav class="flex whitespace-nowrap py-3 md:py-4 md:justify-center gap-2" aria-label="Categories">
          <% const categories = ['Tech & Gadgets', 'Fashion & Beauty', 'News', 'Food & Recipes', 'Lifestyle'] %>
          <% categories.forEach(category => { %>
            <a 
              href="/blog?category=<%= category %>"
              class="<%= selectedCategory === category 
                ? 'bg-black text-white ring-2 ring-black' 
                : 'text-gray-700 hover:bg-gray-100 hover:text-gray-900' %> 
                px-4 py-2 rounded-full text-sm font-medium transition-all duration-200 
                flex-none min-w-fit
                focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500"
            >
              <%= category %>
            </a>
          <% }) %>
        </nav>
      </div>

      <!-- Mobile scroll indicators -->
      <div class="absolute inset-x-0 bottom-0 h-0.5 md:hidden">
        <div class="h-full bg-gray-200 rounded-full overflow-hidden">
