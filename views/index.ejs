    </div>
  </div>
</div>

<!-- Blog grid with date grouping -->
<div class="max-w-[1600px] mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <% Object.entries(groupedBlogs).forEach(([date, blogs]) => { %>
    <!-- Date header -->
    <div class="mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
        <span class="bg-black h-8 w-2 mr-3 rounded-full"></span>
        <%= date %>
      </h2>
      
      <!-- Blog grid for this date -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <% blogs.forEach(blog => { %>
          <article class="flex flex-col overflow-hidden rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 bg-white">
            <a href="/blog/<%= blog._id %>" class="block overflow-hidden group">
              <div class="relative aspect-[16/9] overflow-hidden">
                <img 
                  class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300" 
                  src="<%= blog.image %>" 
                  alt="<%= blog.title %>"
                >
                <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              </div>
            </a>
            <div class="flex-1 p-5">
              <div class="flex-1">
                <p class="inline-flex px-3 py-1 text-xs font-medium bg-indigo-50 text-indigo-600 rounded-full">
                  <%= blog.type %>
                </p>
                <a href="/blog/<%= blog._id %>" class="block mt-3 group">
                  <h3 class="text-lg font-semibold text-gray-900 group-hover:text-gray-600 line-clamp-2 leading-tight">
                    <%= blog.title %>
                  </h3>
                  <p class="mt-3 text-sm text-gray-500 line-clamp-2 leading-relaxed">
                    <%= blog.snippet %>
                  </p>
                </a>
              </div>
              <div class="mt-6 flex items-center justify-between">
                <div class="flex items-center">
                  <img 
                    class="h-8 w-8 rounded-full"
                    src="https://upload.wikimedia.org/wikipedia/commons/e/ec/Medium_logo_Monogram.svg" 
                    alt="<%= blog.author %>"
                  >
                  <div class="ml-2">
                    <p class="text-sm font-medium text-gray-900">
                      <%= blog.author %>
                    </p>
                    <div class="flex items-center text-xs text-gray-500">
                      <time datetime="<%= blog.createdAt %>">
                        <%= new Date(blog.createdAt).toLocaleTimeString('en-US', { 
                          hour: 'numeric',
                          minute: '2-digit',
                          hour12: true
                        }) %>
                      </time>
                      <span class="mx-1">·</span>
                      <span><%= Math.ceil(blog.body.split(' ').length / 200) %> min read</span>
                    </div>
                  </div>
                </div>
                <!-- Add view count -->
                <div class="flex items-center text-gray-500">
                  <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                  </svg>
                  <span class="text-xs font-medium">
                    <%= blog.views || 0 %>
                  </span>
                </div>
              </div>
            </div>
          </article>
        <% }) %>
      </div>
    </div>
  <% }) %>
</div>

