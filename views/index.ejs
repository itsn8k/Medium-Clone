      <!-- Logo Section -->
      <a class="flex justify-center text-teal-300 sm:justify-start" href="/dashboard">
        <img class="rounded-full" src="https://upload.wikimedia.org/wikipedia/commons/e/ec/Medium_logo_Monogram.svg" width="40" height="40" alt="Logo" />
      </a>

      <!-- Links Section -->
     <p class="mt-4 text-sm text-center text-gray-400 lg:text-right lg:mt-0">
      <a href="/dashboard" class="text-gray-400 hover:text-white">T&C</a> &nbsp; 
      <a href="/dashboard" class="text-gray-400 hover:text-white">Career</a> &nbsp; 
      <a href="/dashboard" class="text-gray-400 hover:text-white">Privacy & Policy</a> &nbsp; 
      <a href="/dashboard" class="text-gray-400 hover:text-white">Developers</a>
    </p>

    </div>
  </div>
</footer>

