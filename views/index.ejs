<!-- Add this script at the bottom of your body tag -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  const navScroll = document.querySelector('.overflow-x-auto');
  const scrollIndicator = document.getElementById('scrollIndicator');

  if (navScroll && scrollIndicator) {
    function updateScrollIndicator() {
      const scrollWidth = navScroll.scrollWidth - navScroll.clientWidth;
      if (scrollWidth > 0) {
        const scrolled = (navScroll.scrollLeft / scrollWidth) * 100;
        const indicatorWidth = (navScroll.clientWidth / navScroll.scrollWidth) * 100;
        scrollIndicator.style.width = `${indicatorWidth}%`;
        scrollIndicator.style.transform = `translateX(${scrolled}%)`;
      }
    }

    navScroll.addEventListener('scroll', updateScrollIndicator);
    window.addEventListener('resize', updateScrollIndicator);
    updateScrollIndicator();
  }
});
</script>

<!-- Add these styles to your CSS -->
<style>
  /* Smooth scrolling for the navigation */
  .overflow-x-auto {
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
  }

  /* Hide scrollbar but keep functionality */
  .scrollbar-hide {
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  /* Active state styles */
  .active-category {
    position: relative;
  }
  .active-category::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    height: 2px;
    background-color: currentColor;
  }

  /* Improve touch targets on mobile */
  @media (max-width: 640px) {
    .category-link {
      padding-top: 0.75rem;
      padding-bottom: 0.75rem;
    }
  }

  @media (max-width: 640px) {
    .footer-grid {
      grid-template-columns: repeat(1, 1fr);
      gap: 2rem;
    }
    
    .footer-links {
      text-align: center;
    }
    
    .footer-social {
      justify-content: center;
    }
    
    .footer-bottom {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }
  }
</style>

  
